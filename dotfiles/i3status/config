# i3status configuration file.

general {
        colors = true
        interval = 5
	# gruvbox
        color_good = "#98971a"
        color_bad = "#cc241d"
        color_degraded = "#fabd2f"
}

order += "load"
order += "battery all"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

# Holocene (ish) calendar
tztime local {
        format = "%d %B 1%Y %A; %I:%M %P"
}

load {
        format = "i%1min v%5min xv%15min"
}

