# i3status configuration file.

general {
        colors = true
        interval = 5
        separator = ""
        # gruvbox
        color_good = "#98971a"
        color_bad = "#cc241d"
        color_degraded = "#fabd2f"
}

order += "tztime local"
order += "load"
order += "battery all"
order += "cpu_temperature 0"
order += "memory"
# keep this last
order += "read_file hostname"

battery all {
        format = "%status %percentage"
        status_chr = "🔌"
        status_bat = "🔋"
        status_unk = "❓"
        status_full = "👍"
        low_threshold = 20
}

cpu_temperature 0 {
        format = "🌡️ %degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

tztime local {
        format = "📅 %F %a ⌚ %H:%M"
}

load {
        format = "📊 %1min %5min %15min"
}

memory {
       format = "💾 %used (%percentage_used)"
       decimals = 0
}

read_file hostname {
        path = "/etc/hostname"
        format = "🖥️ %content  "
}
