#!/bin/sh
# xsessionrc --- x session environment -*- shell-script -*-

. $HOME/.profile

# Inform systemd
if [ -z "$GUIX_PROFILE" ]; then
    systemctl --user import-environment DISPLAY
    systemctl --user import-environment DESKTOP_SESSION

    # Ensure correct user dirs configuration
    xdg-user-dirs-update
fi


### X resources:
xrdb -merge $MEINE/Xdefaults

### Input:
#### Keyboard:
setxkbmap -option "ctrl:nocaps"

#### Mouse:

case $(hostname) in
    # Use more logical forward and backward buttons.
    mergen) xinput set-button-map "USB Optical Mouse" 1 2 3 4 5 6 7 9 8 ;;
    *) ;;
esac
