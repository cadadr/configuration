# -*- mode: conf-unix -*-
# mpoprc --- mpop config.

# Set default values for all following accounts.
defaults
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
keep off
password

# IUmail
account iumail
host __IU_POP3_HOST__
port 995
user __IU_MAIL_ADDR__
delivery mda "/usr/bin/procmail -f '%F' -a iumail"
uidls_file ~/posta/mpop_uidls/1
passwordeval "pass show __IU_MAIL_ADDR__"

# self@
account self-inbox
host __MAIL_HOST__
port 995
user __MAIL_ADDR__
delivery mda "/usr/bin/procmail -f '%F' -a self"
uidls_file ~/posta/mpop_uidls/2
passwordeval "pass show __MAIL_ADDR__"
