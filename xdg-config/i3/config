# i3 configuration

set $mod Mod4
font pango:DejaVu Sans 9
floating_modifier $mod
workspace_layout tabbed
focus_follows_mouse no

bindsym F12 exec --no-startup-id i3-dmenu-desktop
bindsym Shift+F12 exec dmenu_run
bindsym $mod+Return exec emacsclient -c
bindsym $mod+Shift+Return exec i3-sensible-terminal
bindsym $mod+Control+Return exec i3-sensible-terminal
bindsym $mod+h exec --no-startup-id sh $MYLIB/i3cheatsheet.sh
bindsym $mod+Control+y exec --no-startup-id xtype.sh
bindsym $mod+Control+f exec --no-startup-id pcmanfm
bindsym $mod+Control+w exec --no-startup-id ffprofile.sh
bindsym $mod+Control+p exec --no-startup-id passmenu.sh
bindsym $mod+Control+e exec xterm -e 'less /run/user/$UID/i3/errorlog.*'
bindsym $mod+Control+x exec xterm -e 'less ~/.xsession-errors'
bindsym $mod+Control+q exec "i3-nagbar -t warning -m 'Bye?' -b 'Yes' 'i3-msg exit'"

bindsym $mod+b focus left
bindsym $mod+n focus down
bindsym $mod+p focus up
bindsym $mod+f focus right

bindsym $mod+Shift+b move left
bindsym $mod+Shift+n move down
bindsym $mod+Shift+p move up
bindsym $mod+Shift+f move right

bindsym F11 fullscreen toggle
bindsym $mod+2 split v
bindsym $mod+3 split h

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+1 layout toggle split
bindsym $mod+semicolon floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+u focus parent
bindsym $mod+c focus child

set $w1 "1/home"
set $w2 "2/www"
set $w3 "3/wrk"

# switch to workspace
bindsym F1 workspace $w1
bindsym F2 workspace $w2
bindsym F3 workspace $w3
bindsym F4 workspace 4
bindsym F5 workspace 5
bindsym F6 workspace 6
bindsym F7 workspace 7
bindsym F8 workspace 8
bindsym F9 workspace 9

# move focused container to workspace
bindsym Shift+F1 move container to workspace $w1
bindsym Shift+F2 move container to workspace $w2
bindsym Shift+F3 move container to workspace $w3
bindsym Shift+F4 move container to workspace 4
bindsym Shift+F5 move container to workspace 5
bindsym Shift+F6 move container to workspace 6
bindsym Shift+F7 move container to workspace 7
bindsym Shift+F8 move container to workspace 8
bindsym Shift+F9 move container to workspace 9

bindsym $mod+g reload
bindsym $mod+Shift+g restart
bindsym $mod+k kill

# power management
# from: https://wiki.archlinux.org/index.php/I3
set $Locker lockscr.sh
bindsym $mod+l exec --no-startup-id $Locker, mode "default"
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # exit mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
bindsym Pause mode "$mode_system"

# manual management of external displays
# from: https://wiki.archlinux.org/index.php/I3
set $mode_display Ext Screen (h) HDMI ON, (H) HDMI OFF, (s) HDMI Sound ON, (S) HDMI Sound OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --right-of LVDS1, mode "default"
    bindsym y exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"
    bindsym s exec --no-startup-id pactl set-card-profile 0 output:hdmi-stereo
    bindsym S exec --no-startup-id pactl set-card-profile 0 output:analog-stereo

    # exit mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym F10 mode "$mode_display"

set $mode_brightness Set brightness (nâˆˆ1..9=>0.n;n=0=>1.0)
mode "$mode_brightness" {
    bindsym 1 exec bright 0.1
    bindsym 2 exec bright 0.2
    bindsym 3 exec bright 0.3
    bindsym 4 exec bright 0.4
    bindsym 5 exec bright 0.5
    bindsym 6 exec bright 0.6
    bindsym 7 exec bright 0.7
    bindsym 8 exec bright 0.8
    bindsym 9 exec bright 0.9
    bindsym 0 exec bright 1

    # exit mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
bindsym $mod+Control+b mode "$mode_brightness"

set $mode_pass Passthrough, Return / Escape / Ctrl+G to exit
mode "$mode_pass" {
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
bindsym $mod+Control+space mode "$mode_pass"

set $mode_kbdselect Select keyboard layout: (g) GB Q (t) TrAltQ
mode "$mode_kbdselect" {
    bindsym g exec setxkbmap gb; mode "default"
    bindsym t exec setxkbmap tr alt; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
bindsym $mod+Control+k mode "$mode_kbdselect"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%; exec notify-send -u low -t 300 volume "$(pacmd dump-volumes | awk 'NR==1{print $8}' | sed 's/\%//')"%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%; exec notify-send -u low -t 300 volume "$(pacmd dump-volumes | awk 'NR==1{print $8}' | sed 's/\%//')"%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

set $mod_volume Set volume (i)ncrease / (d)ecrease / (m)ute
mode "$mod_volume" {
    bindsym i exec pactl set-sink-volume 0 +5%; exec notify-send -u low -t 300 volume "$(pacmd dump-volumes | awk 'NR==1{print $8}' | sed 's/\%//')"%
    bindsym d exec pactl set-sink-volume 0 -5%; exec notify-send -u low -t 300 volume "$(pacmd dump-volumes | awk 'NR==1{print $8}' | sed 's/\%//')"%
    bindsym m exec pactl set-sink-mute 0 toggle

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}
bindsym $mod+Control+s mode "$mod_volume"

bar {
	font pango:DejaVu Sans 10
	position top
	status_command i3status
	colors {
		separator		#C20000
		background		#dddddd
		statusline		#000000
		inactive_workspace	#dddddd #000000
	}
}
