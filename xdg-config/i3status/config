# i3status configuration file.

general {
        colors = true
        interval = 20
}

order += "load"
order += "battery all"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

tztime local {
        format = "%d %B %Y %A; %I:%M %P"
}

load {
        format = "i%1min v%5min xv%15min"
}

